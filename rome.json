{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noImplicitBoolean": "off",
        "useBlockStatements": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    },
    "ignore": ["./utils/gradient.ts"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 140,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
